#version 330 core

// Per-fragment data.
in vec2 UV;

// Per-instance data (same as per-call for now since we're not using instancing).
uniform float alpha;

// Per-call data.
uniform sampler2D textureSampler0;

// MIP bias.
uniform float mip;

out vec4 colour;

void main(){
	vec4 tempColour = texture(textureSampler0, UV, mip).rgba;
	tempColour.a *= alpha;
	if(tempColour.a == 0.0){
		discard;
	}
	colour = tempColour;
}